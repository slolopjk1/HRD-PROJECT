                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자"
                    android:textSize="28dp"
                    android:textColor="#000000"
                    android:layout_alignBottom="@+id/user"
                    android:layout_toLeftOf="@+id/user"
