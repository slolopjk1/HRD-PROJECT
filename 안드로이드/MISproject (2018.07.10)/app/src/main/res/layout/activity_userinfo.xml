<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="권한 요청"
            android:textColor="#000000"
            android:textSize="40dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">


        <EditText
            android:id="@+id/E_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_idhint"
            android:layout_centerHorizontal="true"
            android:hint="이름" />

        <TextView
            android:id="@+id/E_namehint"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_name"
            android:layout_centerHorizontal="true"
            android:text="영어,한글가능"
            android:textColor="#ff0000"/>

        <EditText
            android:id="@+id/E_password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_namehint"
            android:layout_centerHorizontal="true"
            android:hint="비밀번호" />

        <TextView
            android:id="@+id/E_passwordhint"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_password"
            android:layout_centerHorizontal="true"
            android:text="8~12자 영문 대 소문자, 숫자, 특수문자를 사용하세요"
            android:textColor="#ff0000"/>

        <EditText
            android:id="@+id/E_repassword"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_passwordhint"
            android:layout_centerHorizontal="true"
            android:hint="비밀번호 재입력" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_repassword"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="권한 요청" />

            <Button
                android:id="@+id/per_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>